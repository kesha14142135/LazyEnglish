<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_words"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.klg.lazyenglish.ui.settings.number.WordsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_next">

        <TextView
            android:id="@+id/text_view_title_words"
            style="@style/TextViewSetting"
            android:text="@string/count_word" />

        <NumberPicker
            android:id="@+id/number_picker_level"
            style="@style/DefaultNumberPickerTheme"
            android:layout_width="@dimen/number_picker_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_title_words"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:solidColor="@color/colorPrimary" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/button_next"
        android:alpha=".5"
        android:background="@android:color/white" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:text="@string/next"
        android:textColor="@android:color/white" />

</RelativeLayout>
